{
  "name": "@rcip/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Backend API service for Robot Competitive Intelligence Portal",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist coverage",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:generate": "drizzle-kit generate",
    "seed": "tsx src/db/seed.ts",
    "seed:humanoid": "tsx src/db/seed-humanoid.ts",
    "seed:crawl": "tsx src/db/seed-crawl-targets.ts",
    "seed:rfm": "tsx src/db/seed-rfm.ts",
    "seed:components": "tsx src/db/seed-components.ts",
    "update:categories": "tsx src/db/update-company-categories.ts",
    "clear:content": "tsx src/db/clear-article-content.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@elastic/elasticsearch": "^8.11.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/jwt": "^8.0.0",
    "drizzle-kit": "^0.20.0",
    "drizzle-orm": "^0.29.0",
    "fastify": "^4.25.0",
    "openai": "^6.17.0",
    "pg": "^8.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "fast-check": "^3.15.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
